{
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"target": "es2020",
		"lib": ["es2020", "dom"],
		"module": "ESNext",
		"strict": true,
		"outDir": "package",
		"declaration": true,
		// "skipLibCheck": true,
		"esModuleInterop": true,
		"importsNotUsedAsValues": "error",
		"preserveValueImports": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
	},
	"include": ["source/**/*.ts"]
}
