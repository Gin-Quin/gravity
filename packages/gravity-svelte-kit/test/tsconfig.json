{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"@digitak/gravity-svelte": ["../source"],
			"@digitak/gravity-svelte/*": ["../source/*"]
		}
	}
}
