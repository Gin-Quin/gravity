{
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"target": "es2020",
		"lib": [
			"es2020",
			"dom",
		],
		"module": "NodeNext",
		"strict": true,
		"outDir": "package",
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"types": [
			"bun-types"
		],
		"experimentalDecorators": true
	},
	"include": [
		"source/**/*.ts"
	],
	"exclude": [
		"source/templates/**/*.ts"
	]
}