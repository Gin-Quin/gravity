{
	"compilerOptions": {
		"moduleResolution": "Bundler",
		"target": "es2020",
		"lib": ["es2020", "dom"],
		"module": "esnext",
		"strict": true,
		"outDir": "package",
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"baseUrl": "."
	},
	"include": ["./source/**/*.ts"]
}
